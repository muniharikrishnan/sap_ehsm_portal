<mvc:View controllerName="ehsmportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="loginPage" title="" showHeader="false" class="sapEHSMLoginPage">
        <content>
            <VBox class="sapEHSMLoginContainer" renderType="Bare">
                <!-- Logo and Title Section -->
                <VBox class="sapEHSMLoginHeader">
                    <core:Icon src="sap-icon://shield" class="sapEHSMLogo" size="4rem"/>
                    <Text text="SAP EHSM" class="sapEHSMTitle"/>
                    <Text text="Environmental Health &amp; Safety Management" class="sapEHSMSubtitle"/>
                </VBox>
                
                <!-- Login Form Section -->
                <VBox class="sapEHSMLoginForm">
                    <Text text="Welcome Back" class="sapEHSMWelcomeText"/>
                    <Text text="Please sign in to continue" class="sapEHSMWelcomeSubtext"/>
                    
                    <VBox class="sapEHSMInputGroup">
                        <HBox class="sapEHSMInputWrapper">
                            <core:Icon src="sap-icon://employee" class="sapEHSMInputIcon"/>
                            <Input id="empId" 
                                   width="100%" 
                                   placeholder="{i18n>login.user}" 
                                   valueLiveUpdate="true"
                                   class="sapEHSMInput"/>
                        </HBox>
                        
                        <HBox class="sapEHSMInputWrapper">
                            <core:Icon src="sap-icon://key" class="sapEHSMInputIcon"/>
                            <Input id="password" 
                                   width="100%" 
                                   type="Password" 
                                   placeholder="{i18n>login.password}" 
                                   valueLiveUpdate="true"
                                   class="sapEHSMInput"/>
                            <Button id="passwordToggle" 
                                    icon="sap-icon://show" 
                                    type="Transparent" 
                                    press="onPasswordToggle"
                                    class="sapEHSMPasswordToggle"
                                    tooltip="Show Password"
                                    ariaLabel="Show Password"
                                    accessibleRole="Button"/>
                        </HBox>
                    </VBox>
                    
                    <Button id="loginBtn" 
                            text="{i18n>login.submit}" 
                            type="Emphasized" 
                            press="onLogin"
                            class="sapEHSMLoginButton"/>
                    
                    <HBox class="sapEHSMFooter">
                        <core:Icon src="sap-icon://shield" class="sapEHSMFooterIcon"/>
                        <Text text="Secure Enterprise Portal" class="sapEHSMFooterText"/>
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>

